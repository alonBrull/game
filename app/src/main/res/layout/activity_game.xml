<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gameBG"
    tools:context=".GameActivity">


    <Button
        android:id="@+id/arrow_BTN_right"
        android:layout_width="@dimen/arrowsize"
        android:layout_height="@dimen/arrowsize"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margArrowsSide"
        android:layout_marginBottom="@dimen/margArrowsBottom"
        android:background="@drawable/ic_rightarrow" />

    <Button
        android:id="@+id/arrow_BTN_left"
        android:layout_width="@dimen/arrowsize"
        android:layout_height="@dimen/arrowsize"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margArrowsSide"
        android:layout_marginBottom="@dimen/margArrowsBottom"
        android:background="@drawable/ic_leftarrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_avatar" />

            <ImageView
                android:id="@+id/avatar_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_avatar" />

            <ImageView
                android:id="@+id/avatar_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_avatar" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/game_L_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_0_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_0_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_0_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_L_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_1_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_L_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_2_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_L_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_3_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_L_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_4_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_L_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_5_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_5_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_L_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_6_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_6_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

            <ImageView
                android:id="@+id/drop_6_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_drop" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/life_0"
        android:layout_width="@dimen/lifeSize"
        android:layout_height="@dimen/lifeSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margLifeTop"
        android:layout_marginEnd="@dimen/margLifeside"
        android:src="@drawable/ic_life" />

    <ImageView
        android:id="@+id/life_1"
        android:layout_width="@dimen/lifeSize"
        android:layout_height="@dimen/lifeSize"
        android:layout_marginTop="@dimen/margLifeTop"
        android:layout_marginEnd="@dimen/margLifeNext"
        android:layout_toStartOf="@+id/life_0"
        android:src="@drawable/ic_life" />

    <ImageView
        android:id="@+id/life_2"
        android:layout_width="@dimen/lifeSize"
        android:layout_height="@dimen/lifeSize"
        android:layout_marginTop="@dimen/margLifeTop"
        android:layout_marginEnd="@dimen/margLifeNext"
        android:layout_toStartOf="@+id/life_1"
        android:src="@drawable/ic_life" />

    <Button
        android:id="@+id/game_BTN_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:backgroundTint="#55EC09"
        android:text="DEBUG" />


</RelativeLayout>